{
  "name": "affinity_custom_webpack",
  "version": "1.0.0",
  "description": "WP Webpack dev setup to compile JS and nodesass for SCSS - npm run build:dev for dev and npm run build:prod to compress and minify",
  "main": "index.js",
  "scripts": {
    "sass": "npm run watch:scss",
    "watch": "webpack --progress --watch",
    "nodesass": "node-sass -o ./ ./src/scss/style.scss --output-style compressed --source-map true",
    "css:prefix": "postcss -u autoprefixer --autoprefixer.browsers '> 1%, IE 11' -r ./style.css",
    "watch:scss": "onchange './src/scss/**/*.scss' -i -- npm run build:css",
    "build:css": "npm run nodesass && npm run css:prefix",
    "build:prod": "webpack && uglifyjs ./public/bundle.js -m -c -o ./public/bundle.min.js --source-map ",
    "build:dev": "npm run sass & npm run watch",
    "eslint": "eslint \"src/**/*.{js,jsx}\" --quiet",
    "eslint:fix": "eslint \"src/**/*.{js,jsx}\" --quiet --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,scss}\"",
    "stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "wp-pot": "wp-pot --src '*.php' --dest-file 'languages/_s.pot' --domain '_s'",
    "postinstall": "npm run build:dev"
  },
  "keywords": [
    "wordpress",
    "webpack"
  ],
  "author": "",
  "license": "ISC",
  "browserslist": [
    "defaults",
    "not ie < 11",
    "last 2 versions",
    "> 1%",
    "iOS 7",
    "last 3 iOS versions"
  ],
  "homepage": "https://affinitycreative.com",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.12",
    "browser-sync-webpack-plugin": "^2.2.2",
    "css-loader": "^1.0.1",
    "css-mqpacker": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^3.6.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-prettier": "^2.7.0",
    "export-loader": "^1.0.52",
    "expose-loader": "^0.7.5",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^2.0.0",
    "img-loader": "^3.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.2",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "precss": "^4.0.0",
    "prettier": "^1.19.1",
    "raw-loader": "^4.0.1",
    "resolve-url-loader": "^3.1.1",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-wordpress": "^13.1.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "svg-sprite-loader": "^4.3.0",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-livereload-plugin": "^2.3.0",
    "wp-pot-cli": "^1.5.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.11.5",
    "@barba/core": "^2.9.7",
    "extra-watch-webpack-plugin": "^1.0.3",
    "gsap": "file:gsap-bonus.tgz",
    "jquery": "^3.5.1",
    "postcss": "^7.0.32"
  }
}
